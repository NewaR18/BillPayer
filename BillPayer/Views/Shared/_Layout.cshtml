@using BillPay.DataAccess.Repository.IRepository;
@using BillPay.Models;
@using BillPay.Utilities.RolesAndMenus;
@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Http;
@inject SignInManager<ApplicationUser> signInManager
@inject CheckMenus checkMenu
@inject IUnitOfWork _repo
@{
    IEnumerable<string> menusNames = await checkMenu.GetMenuNames();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BillPayer</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BillPayer.styles.css" asp-append-version="true" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="~/lib/css/jquery.datatables.min.css" rel="stylesheet" />
    <link href="~/lib/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/24.2.3/fluent.css" />
    <script src="https://cdn.syncfusion.com/ej2/24.2.3/dist/ej2.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Bills" asp-controller="Home" asp-action="Index">BillPayer</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        @if (menusNames.Any(x => x.Equals("Customers") || x.Equals("Role") || x.Equals("Menu")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    User
                                </a>
                                <ul class="dropdown-menu">
                                    @if (menusNames.Any(x => x.Equals("Customers")))
                                    {
                                        <li>
                                            <a class="nav-link text-dark" asp-area="AccountManager" asp-controller="Customers" asp-action="Index">Customers</a>
                                        </li>
                                    }
                                    @if (menusNames.Any(x => x.Equals("Role")))
                                    {
                                        <li>
                                            <a class="nav-link text-dark" asp-area="AccountManager" asp-controller="Role" asp-action="Index">Role</a>
                                        </li>
                                    }
                                    @if (menusNames.Any(x => x.Equals("Menu")))
                                    {
                                        <li>
                                            <a class="nav-link text-dark" asp-area="AccountManager" asp-controller="Menu" asp-action="Index">Menu</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (menusNames.Any(x => x.Equals("Bill")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Bills" asp-controller="Bill" asp-action="Index">
                                    Bill
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="AccountManager" asp-controller="Account" asp-action="Profile">Hello @User.Identity?.Name!</a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-area="AccountManager" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="AccountManager" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="AccountManager" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BillPayer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/js/jquery.datatables.min.js"></script>
    <script src="~/lib/js/select2.min.js"></script>
    <script src="~/lib/js/platform.js" async defer></script>
    <script src="~/lib/js/sweetalert2@11.js"></script>
    <script src="~/lib/js/toastr.min.js"></script>
    <script src="~/lib/js/moment.min.js"></script>
    <ejs-scripts></ejs-scripts>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
